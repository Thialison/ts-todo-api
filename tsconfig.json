{
  "compilerOptions": {
    "target": "es2017",        
    "module": "commonjs",   
    "allowJs": true,        
    "outDir": "./dist",      
    "rootDir": "./src",     
    "baseUrl": "src",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true,  
    "paths": {
      "@routes/*": ["routes/*"],
      "@useCases/*": ["useCases/*"],
      "@utils/*": ["utils/*"],
      "@schemas/*": ["repositories/implementations/mongo/schemas/*"],
      "@entities/*": ["entities/*"],
      "@repositories/*": ["repositories/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
